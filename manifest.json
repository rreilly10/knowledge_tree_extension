{
    "manifest_version": 2,
    "name": "test",
    "description": "useless",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "history",
        "http://*/*"
    ],
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*"
            ],
            "js": [
                "popup.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}